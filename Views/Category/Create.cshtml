@model Category

<div class="container">
	<h2>Category</h2>
	<div class="text-danger" asp-validation-summary="All">
	</div>
	<form method="post">
		<div class="form-group mt-3">
			<label asp-for="Name">Category Name</label>
			<input asp-for="Name" class="form-control" placeholder="Category Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group  mt-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" placeholder="Display Order">
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mt-3 row">
			<div class="col-6 col-md-3">
				<button type="submit" class="form-control btn btn-primary">Submit</button>
			</div>
			<div class="col-6 col-md-3">
				<a class="form-control btn btn-outline-secondary border-1 text-black" asp-controller="Category" asp-action="Index">
					<i class="fa-solid fa-arrow-left"></i>
					Back to List
				</a>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}